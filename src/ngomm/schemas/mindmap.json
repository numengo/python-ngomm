{
    "$schema": "http://numengo.org/draft-05/schema#",
    "$id": "http://numengo.org/ngomm#",
    "description": "mindmap object definitions",
    "type": "object",
    "definitions": {
        "Map": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "version": {
                    "type": "string"
                }
            }
        },
        "Node": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "id": {
                    "type": "string"
                },
                "text": {
                    "type": "string"
                },
                "link": {
                    "type": "string"
                },
                "folded": {
                    "type": "string"
                },
                "color": {
                    "type": "string"
                }
            }
        },
        "Edge": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "width": {
                    "type": "string"
                },
                "style": {
                    "type": "string"
                },
                "color": {
                    "type": "string"
                }
            }
        },
        "Font": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "name": {
                    "type": "string"
                },
                "size": {
                    "type": "string"
                },
                "bold": {
                    "type": "string"
                },
                "italic": {
                    "type": "string"
                }
            }
        },
        "Icon": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "builtin": {
                    "type": "string"
                }
            }
        },
        "Cloud": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "color": {
                    "type": "string"
                }
            }
        },
        "Hook": {
            "type": "object",
            "additionalProperties": false,
            "required": ["name"],
            "properties": {
                "name": {
                    "type": "string"
                },
                "uri": {
                    "type": "string"
                },
                "size": {
                    "type": "number"
                },
                "zoom": {
                    "type": "number"
                },
                "equation": {
                    "type": "string"
                }
            }
        },
        "ArrowLink": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "color": {
                    "type": "string"
                },
                "destination": {
                    "type": "string"
                },
                "startarrow": {
                    "type": "string"
                },
                "endarrow": {
                    "type": "string"
                }
            }
        },
        "Attribute": {
            "type": "object",
            "additionalProperties": false,
            "required": [
                "name",
                "value"
            ],
            "properties": {
                "name": {
                    "type": "string"
                },
                "value": {
                    "type": "string"
                },
                "type": {
                    "type": "string"
                },
                "restricted": {
                    "type": "boolean"
                },
                "visible": {
                    "type": "boolean"
                }
            }
        },
        "RichContent": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "type": {
                    "enum": ["node", "note"]
                },
                "content": {
                    "type": "array",
                    "items": {
                        "type": "#/definitions/html"
                    }
                }
            }
        }
    }
}
